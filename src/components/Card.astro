---
import { Image } from "astro:assets";
// import type { ImageMetadata } from "astro";
// interface Props {
//   title: string;
//   content: string;
//   href: string;
//   image: string | ImageMetadata;
// }

const { href, title, content, image } = Astro.props;
---

<a href={href}>
<div class="card">
  <div class="card-image">
    <!-- <img src={image} alt="" /> -->
    <Image src={image} alt="" />
  </div>
  <div class="card-body">
    <h2>
      {title}
    </h2>
    <p>
      {content}
    </p>
  </div>
</div>
</a>
<style lang="scss">
	a{
		text-decoration: none;
	}
  .card {
    height: 458px;
    width: 100%;
    border-radius: 10px;
		overflow: hidden;
    background: #e8ffe8;
		border: 0;
		box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.10);
    &:hover {
			box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
			background: #d3ffd8;
    }
    &-image {
      height: 253px;
      width: 100%;
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }
    &-body {
      display: flex;
      justify-content: center;
      flex-direction: column;
      text-align: center;
      h2 {
        color: var(--text-color);
        font-size: 22px;
        line-height: normal;
        letter-spacing: 0.48px;
        font-weight: 600;
				@media screen and (min-width: 768px) {
          font-size: 24px;
        }
      }
      p {
        color: var(--text-color);
        font-weight: 400;
        line-height: 132%;
        font-size: 16px;
        letter-spacing: 0.36px;
        @media screen and (min-width: 768px) {
          font-size: 18px;
        }
      }
    }
  }
</style>
