---
import { Image } from "astro:assets";
import HeroImage from "../images/hero-image.png";
import WhatsAppIcon from "../images/whatsapp.svg";
---

<div class="hero ">
  <div class="inner container">
    <section class="hero-section">
      <div class="hero-content">
        <div class="hero-content-inner">
          <h1>Your Path to Financial Freedom</h1>
          <p>
            Be in control of your money, track your spending effortlessly, and
            get to your financial goals. Start saving smarter today.
          </p>

          <button
            class="btn btn-primary fw-bold d-flex align-items-center gap-1"
          >
            <Image
              src={WhatsAppIcon}
              alt="whatsapp icon"
              height="20"
              width="20"
            /> Chat with Us</button
          >
        </div>
      </div>
      <div class="hero-image d-none d-md-block">
        <div class="image-wrap">
          <Image src={HeroImage} alt="Hero-image" />
        </div>
      </div>
    </section>
  </div>
</div>

<style lang="scss">
  .hero {
    color: white;
    background-color: var(--green-dark);
    min-height: 80dvh;
    display: grid;
    align-items: center;

    &-section {
      display: grid;
      grid-template-columns: 1fr;
      // gap: 2rem;
      @media screen and (min-width: 768px) {
        grid-template-columns: 50% 50%;
      }
    }

    &-content {
      flex: 1;
      display: flex;
      align-items: center;
      &-inner {
        // max-width: 601px;
        h1 {
          font-size: 3rem;
          line-height: 72px;
          font-weight: 700;
          letter-spacing: 0.96px;
        }
        p {
          font-size: 24px;
          letter-spacing: 0.48px;
          font-weight: 300;
        }
      }
    }
    &-image {
      display: none;
      @media screen and (min-width: 768px) {
        display: flex;
				
      }
      .image-wrap {
				margin-left: auto;
        width: 538px;
        height: 416px;
        flex-shrink: 0;
        border-radius: 20px;
        border: 1px solid #e6e6e6;
        overflow: hidden;
        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }
    }
  }
</style>
